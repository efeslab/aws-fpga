MAKE_FILE_PATH = $(dir $(abspath $(lastword $(MAKEFILE_LIST))))
LIBFPGARROPENCL_PATH := $(patsubst %/,%,$(MAKE_FILE_PATH))
LIBFPGARROPENCL_SRC := $(wildcard ${LIBFPGARROPENCL_PATH}/*.c)
LIBFPGARROPENCL_HEADERS := $(wildcard ${LIBFPGARROPENCL_PATH}/*.h)
LIBFPGARROPENCL_INCLUDE := $(LIBFPGARROPENCL_PATH)
LIBFPGARROPENCL_ALL_FILES := $(LIBFPGARROPENCL_HEADERS) $(LIBFPGARROPENCL_SRC)
$(info $$LIBFPGARROPENCL_PATH is $(LIBFPGARROPENCL_PATH))
