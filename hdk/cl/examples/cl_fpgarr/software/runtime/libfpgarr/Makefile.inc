MAKE_FILE_PATH = $(dir $(abspath $(lastword $(MAKEFILE_LIST))))
LIBFPGARR_PATH := $(patsubst %/,%,$(MAKE_FILE_PATH))
LIBFPGARR_SRC := $(wildcard ${LIBFPGARR_PATH}/*.c)
LIBFPGARR_OBJ = $(LIBFPGARR_SRC:.c=.o)
LIBFPGARR_HEADERS := $(wildcard ${LIBFPGARR_PATH}/*.h)
LIBFPGARR_INCLUDE := $(LIBFPGARR_PATH)
LIBFPGARR_ALL_FILES := $(LIBFPGARR_HEADERS) $(LIBFPGARR_SRC)
$(info $$LIBFPGARR_PATH is $(LIBFPGARR_PATH))

CFLAGS += -I$(LIBFPGARR_PATH)
